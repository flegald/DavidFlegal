<script type="text/javascript">
   jQuery(function($){
      $( '.menu-btn' ).click(function(){
         $('.responsive-menu').slideToggle()
      })
   })


   if ($('html').width() <= 700){
         $('.mobile-nav').show()
         $('nav').hide()
   } else {
         $('.mobile-nav').hide()
         $('nav').show()
   } 
        

   $(window).resize(function(){
      if ($(window).width() >= 700){   
         $('nav').show()
         $('.mobile-nav').hide()
      } else {
         $('nav').hide()
         $('.mobile-nav').show()
      }
   });
</script>

